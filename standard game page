<!-- If HTML5 iframe game, replace src with the game embed -->
<iframe id="gameFrame" src="GAME_EMBED_URL" allowfullscreen width="800" height="600"></iframe>

<p>Controls: Check game instructions</p>

<script>
function goFullscreen(){
  const frame = document.getElementById("gameFrame");
  if(frame.requestFullscreen) frame.requestFullscreen();
  else if(frame.webkitRequestFullscreen) frame.webkitRequestFullscreen();
}

// Desktop-only enforcement
if (/Mobi|Android|iPhone|iPad/i.test(navigator.userAgent)){
  document.body.innerHTML = "<h2>Desktop only game.</h2>";
}
</script>

